{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "supabase/functions/**/*",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.ts",
    "src/__mocks__/**"
  ]
}
